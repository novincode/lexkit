{
  "name": "lexkit",
  "version": "0.0.1",
  "description": "LexKit - A headless, extensible rich text editor built on Lexical",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0"
  },
  "keywords": [
    "editor",
    "rich-text",
    "lexical",
    "react",
    "typescript",
    "wysiwyg",
    "headless"
  ],
  "author": "LexKit Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/novincode/lexkit.git"
  },
  "bugs": {
    "url": "https://github.com/novincode/lexkit/issues"
  },
  "homepage": "https://github.com/novincode/lexkit#readme",
  "dependencies": {
    "@lexkit/editor": "^0.0.1"
  },
  "peerDependencies": {
    "@lexical/html": "^0.34.0",
    "@lexical/list": "^0.34.0",
    "@lexical/markdown": "^0.34.0",
    "@lexical/react": "^0.34.0",
    "@lexical/rich-text": "^0.34.0",
    "@lexical/selection": "^0.34.0",
    "@lexical/utils": "^0.34.0",
    "@lexical/code": "^0.34.0",
    "lexical": "^0.34.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "eslint": "^9.32.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.3"
  }
}
